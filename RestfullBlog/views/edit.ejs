<%- include("partials/header") %>
<div class="ui main text container segment" id="bixo">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/posts/<%=blog.id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="">title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label for="">Image url</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label for="">Post Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" ><%=blog.body%></textarea>
        </div>
        
        
        <input type="submit" class="ui black big basic button">
    </form>
</div>
<%- include("partials/footer") %>