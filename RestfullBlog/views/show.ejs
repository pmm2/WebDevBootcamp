<%- include("partials/header") %>
<div class="ui main text container segment" id="bixo">
    <div class="ui huge header"><%=post.title%></div>
    <div class="ui top attached ">
        <img class="ui centered rounded image" src="<%=post.image%>" alt="" />
    </div>
    <div class="content">
        <span><%=post.created.toDateString()%></span>
        
    </div>
    <div class="description">
        <p><%=post.body%></p>
    </div>
    <a class="ui orange basic button" href="/posts/<%=post._id%>/edit">Edit</a>
    <form id="delete" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
         <button class="ui red basic button">Delete</button>
    </form>
    
</div>
<%- include("partials/footer") %>